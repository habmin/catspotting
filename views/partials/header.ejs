    <body>
        <!-- Background filter -->
        <div id="filter"></div>
        
        <a href="/catspotting"><h1 id="title">Catspotting</h1></a>
        
        <!-- Different drop-menu based if a user is signed on or not -->
        <nav>
            <% if (currentUser) { %>
                <div class="drop-menu">
                    <h3><span class="drop-arrow">‚ñ∏</span>Welcome <%= currentUser.username %>!</h3>
                    <div class="menu-contents">
                        <a href="/catspotting/user/<%= currentUser.username %>"><button type="button'">Profile</button></a>
                        <a href="/catspotting/map"><button type="button'">View Map</button></a>
                        <a href="/catspotting/new"><button type="button'">New Post</button></a>
                        <form action="/sessions?_method=DELETE" method="POST">
                            <button type="submit" value="Log Out">Log Out</button>
                        </form>
                    </div>  
                </div>
            <% } else { %>
                <div class="drop-menu">
                    <h3><span class="drop-arrow">‚ñ∏</span>Welcome Guest!</h3>
                    <div class="menu-contents">
                        <a href="/catspotting/map"><button type="button'">View Map</button></a>
                        <a href="/users/new"><button type="button">Sign Up</button></a>
                        <a href="/sessions/login"><button type="button">Log In</button></a>
                    </div>  
                </div>
            <% } %>
        </nav>

